<Window x:Class="PracticSemenov.Windows.AddStudentExam"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PracticSemenov.Windows"
        mc:Ignorable="d"
        Title="AddStudentExam" Height="200" Width="320">
    <Grid>
        <StackPanel Margin="15" VerticalAlignment="Center">
            <TextBlock>Выберите студента:</TextBlock>
            <ComboBox DisplayMemberPath="FullName"  Margin="0 10" x:Name="StudentCb"></ComboBox>
            <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                <TextBlock Margin="0 0 10 0">Оценка:</TextBlock>
                <TextBox Width="200" x:Name="ScoreTb"></TextBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Width="100" Margin="10" x:Name="AddBtn" Click="AddBtn_Click">Добавить</Button>
                <Button Width="100" Margin="10" x:Name="CancelBtn" Click="CancelBtn_Click">Отмена</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
