<Window x:Class="PracticSemenov.Windows.AddDisciplineCafedra"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PracticSemenov.Windows"
        mc:Ignorable="d"
        Title="DisciplineCafedra" Height="200" Width="320">
    <Grid>
        <StackPanel Margin="15" VerticalAlignment="Center">
            <TextBlock>Выберите дисциплину:</TextBlock>
            <ComboBox DisplayMemberPath="NameDiscipline"  Margin="0 10" x:Name="DisciplineCb"></ComboBox>
            

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Width="100" Margin="10" x:Name="AddBtn" Click="AddBtn_Click">Добавить</Button>
                <Button Width="100" Margin="10" x:Name="CancelBtn" Click="CancelBtn_Click">Отмена</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
