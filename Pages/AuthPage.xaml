<Page x:Class="PracticSemenov.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PracticSemenov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 -120 0 0">
            <TextBlock FontSize="25" FontWeight="SemiBold" Margin="5 0 5 30" TextAlignment="Center">Авторизация</TextBlock>
            <StackPanel Orientation="Horizontal">
                <TextBlock Margin="10 0" Width="50">Логин:</TextBlock>
                <TextBox Width="200" x:Name="LoginTb"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0 10" Visibility="Collapsed">
                <TextBlock Margin="10 0" Width="50">Пароль:</TextBlock>
                <PasswordBox Width="200" x:Name="PasswordPb" ></PasswordBox>
            </StackPanel>
            <Button Height="30" Margin="0 5 0 10" x:Name="EnterBtn" Click="EnterBtn_Click" Background="HotPink">Войти</Button>

        </StackPanel>
    </Grid>
</Page>
